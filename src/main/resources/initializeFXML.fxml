<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller"
            prefHeight="400.0" prefWidth="600.0" fx:id="initRoot">

    <center>
        <VBox alignment="CENTER" spacing="5">
            <Label text="Initialize Server Using a Port Number"/>
            <HBox alignment="CENTER" spacing="5">
                <Label text="Port Number: "/>
                <TextField fx:id="portTextField"/>
                <Label fx:id="warningLabel" text="Please enter a valid port number" visible="false"/>
            </HBox>
            <Button fx:id="initButton" text="Create Server" onAction="#createServer"/>
        </VBox>
    </center>
</BorderPane>
